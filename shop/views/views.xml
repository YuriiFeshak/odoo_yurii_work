<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shop_list_view">
      <field name="name">shop.list</field>
      <field name="model">shop.shop</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="number"/>
          <field name="availability"/>
        </tree>
      </field>
    </record>
<!--   category products  -->
    <record model="ir.ui.view" id="shop_category_products_list">
      <field name="name">category.products.list</field>
      <field name="model">category.products</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="name"/>
          <field name="products_description"/>
        </tree>
      </field>
    </record>
<!--   Products-->
    <record model="ir.ui.view" id="shop_products_list">
      <field name="name">products.list</field>
      <field name="model">products.store</field>
      <field name="arch" type="xml">
        <tree multi_edit="1">
          <field name="products_category_id"/>
          <field name="name"/>
          <field name="model_product"/>
          <field name="total_stock"/>
          <field name="availability_products"/>
          <field name="description_category"/>
          <field name="state"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="shop_products_form">
      <field name="name">products.form</field>
      <field name="model">products.store</field>
      <field name="arch" type="xml">
        <form>
          <header>
              <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" type="object"/>
            <field name="state" widget="statusbar" options="{'clickable': '1'}" statusbar_visible="draft,confirm,done"/>
          </header>
            <sheet>
              <group>
                <field name="products_category_id"/>
                <field name="name"/>
                <field name="availability_products"/>
                <field name="stock_in" readonly="1"/>
                <field name="stock_out" readonly="1"/>
                <field name="stock_left" readonly="1"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
<!--                <button string="Massage" name="create_notification" type="object" class="btm-primary"/>-->
              </group>
              <notebook>
                <page string="Discriptions">
                  <tree editable="bottom">
                   <field name="description_text_id"/>
                  </tree>
                </page>
              </notebook>
            </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shop_action_window">
      <field name="name">shop</field>
      <field name="res_model">shop.shop</field>
      <field name="view_mode">tree,form</field>
    </record>
<!--action category_products-->
    <record model="ir.actions.act_window" id="shop_action_category_products">
      <field name="name">category</field>
      <field name="res_model">category.products</field>
      <field name="view_mode">tree,form</field>
    </record>
<!--action products    -->
    <record model="ir.actions.act_window" id="shop_action_products">
      <field name="name">products</field>
      <field name="res_model">products.store</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="shop_action_server">
      <field name="name">shop server</field>
      <field name="model_id" ref="model_shop_shop"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>
<!--    Add new action button Add in stock-->
    <record model="ir.actions.server" id="action_add_in_stock_wizard">
      <field name="name">Add in stock</field>
      <field name="type">ir.actions.server</field>
      <field name="model_id" ref="model_products_store"/>
      <field name="binding_model_id" ref="model_products_store"/>
      <field name="state">code</field>
      <field name="code">
        for i in records:
          if len(records) == 1:
              action = i.add_in_stock_action()
          else:
              action = i.create_notification()
      </field>
    </record>

    <menuitem name="Shop" id="shop.menu_root" action="shop_action_window"/>
    <!-- menu categories -->

    <menuitem name="Category products" id="shop.menu_category_products" parent="shop.menu_root" action="shop_action_category_products"/>
    <menuitem name="Products" id="shop.menu_products_store" parent="shop.menu_root" action="shop_action_products"/>
  </data>
</odoo>