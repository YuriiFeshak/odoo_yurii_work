<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shop.list">
      <field name="name">shop list</field>
      <field name="model">shop.shop</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="number"/>
          <field name="availability"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="shop.category_products">
      <field name="name">category products</field>
      <field name="model">category.products</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="name_products"/>
          <field name="products_description"/>
        </tree>
      </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shop.action_window">
      <field name="name">shop window</field>
      <field name="res_model">shop.shop</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="shop.category_products_action">
      <field name="name">category products</field>
      <field name="res_model">category.products</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="shop.action_server">
      <field name="name">shop server</field>
      <field name="model_id" ref="model_shop_shop"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Shop" id="shop.menu_root" action="shop.action_window"/>
    <!-- menu categories -->

    <menuitem name="Category products" id="shop.menu_1" parent="shop.menu_root" action="shop.category_products_action"/>

  </data>
</odoo>