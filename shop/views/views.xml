<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="shop.list">
      <field name="name">shop list</field>
      <field name="model">shop.shop</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="number"/>
          <field name="availability"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="shop.категорія_продуктів">
      <field name="name">shop категорія продуктів</field>
      <field name="model">category.product</field>
      <field name="arch" type="xml">
        <tree editable="top" default_order="id desc">
          <field name="numb"/>
          <field name="numb1"/>
        </tree>
      </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="shop.action_window">
      <field name="name">Вікно магазину</field>
      <field name="res_model">shop.shop</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="category_action">
      <field name="name">Категорія продуктів</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">category.product</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="shop.action_server">
      <field name="name">shop server</field>
      <field name="model_id" ref="model_shop_shop"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Магазин" id="shop.menu_root"/>
    <!-- menu categories -->

    <menuitem name="Menu 1" id="shop.menu_1" parent="shop.menu_root"/>
    <menuitem name="Menu 2" id="shop.menu_2" parent="shop.menu_root"/>
    <!-- actions -->

    <menuitem name="Вікно магазину" id="shop.menu_1_list" parent="shop.menu_1"
              action="shop.action_window"/>
    <menuitem name="Server to list" id="shop" parent="shop.menu_2"
              action="shop.action_server"/>
    <menuitem name="Категорія продуктів" id="shop.menu_3_list" parent="shop.menu_1"
              action="category_action"/>
  </data>
</odoo>